{
    "name": "MADE_EEG_Pipeline",
    "schema-version": "0.5",
    "tool-version": "Latest",
    "author": "Child Development Lab, University of Maryland",
    "url": "https://github.com/ChildDevLab/MADE-EEG-preprocessing-pipeline",
    "command-line": "[BIDS_DIR] [SUB_ID] [SES_ID] [TASK_ID] [FILE_EXTENSION] [JSON_PARAMETERS_FILE] [SAVE_INTERIM] [OUTPUT_DIR]",
    "description": "The Maryland Analysis of Developmental EEG (MADE) Pipeline is an EEG pipeline that (in this form) takes a BIDS-EEG directory structure with '*.set' files as input.",
    "inputs": [
        {
            "description": "The BIDS directory (which contains all subjects in your dataset).",
            "id": "bids_dir",
            "name": "bids_dir",
            "optional": false,
            "type": "File",
            "value-key": "[BIDS_DIR]"
        },
        {
            "command-line-flag": "-s",
            "description": "select a specific subject to be processed",
            "id": "sub_id",
            "name": "sub_id",
            "optional": false,
            "type": "String",
            "value-key": "[SUB_ID]"
        },
        {
            "command-line-flag": "-ss",
            "description": "select a specific session to be processed",
            "id": "ses_id",
            "name": "ses_id",
            "optional": true,
            "type": "String",
            "value-key": "[SES_ID]"
        },
        {
            "command-line-flag": "-t",
            "description": "select a specific task to be processed",
            "id": "task_id",
            "name": "task_id",
            "optional": true,
            "type": "String",
            "value-key": "[TASK_ID]"
        },
        {
            "command-line-flag": "-ext",
            "description": "The type of eeg to file to be processed (only .set for now)",
            "id": "file_extension",
            "name": "file_extension",
            "optional": false,
            "type": "String",
            "value-key": "[FILE_EXTENSION]"
        },
        {
            "command-line-flag": "-json",
            "description": "The json file with settings to configure processing",
            "id": "json_parameters_file",
            "name": "json_parameters_file",
            "optional": false,
            "type": "String",
            "value-key": "[JSON_PARAMETERS_FILE]"
        },
        {
            "command-line-flag": "-save-interim",
            "description": "Save interim results",
            "id": "save_interim",
            "name": "save_interim",
            "optional": true,
            "type": "Flag",
            "value-key": "[SAVE_INTERIM]"
        }
      ],
    "output-files" : [{
        "id" : "output_dir",
        "name" : "Output Directory",
        "description" : "This is the directory where the overall outputs are to be stored.",
        "path-template" : "[OUTPUT_DIR]",
        "optional" : false
    }],
    "suggested-resources": {
        "cpu-cores":4,
        "ram": 12,
        "walltime-estimate": 172000
    },
    "tags": {
        "application-type": [
            "bids"
        ],
        "domain": [
            "neuroinformatics",
            "eeg",
            "developmental"
        ]
    },
    "container-image": {
        "type": "singularity",
        "index": "docker://",
        "image": "XXXXXXXXXXXXXXXX"
    },
    "custom": {
        "cbrain:readonly-input-files": true,
        "cbrain:author": "Erik Lee <leex6144@umn.edu>"
    }
}
